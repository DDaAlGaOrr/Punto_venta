<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('templates/linksHead'); -%>
    <title>registrer</title>
</head>
<body>
    
    <div class="container">
        <a href="/producto" class="btn btn-outline-primary mt-4"><i class='bx bxs-plus-circle bx-md'></i></a>
        <table class="table table-bordered table-striped text-center mt-4">
          <thead>
            <tr class="bg-primary text-white">
              <th scope="col">Id producto</th>
              <th scope="col">Nombre producto</th>
              <th scope="col">Categoria</th>
              <th scope="col">Precio de compra</th>
              <th scope="col">Precio de venta</th>
              <th scope="col">Contenido</th>
              <th scope="col">Stock</th>
              
            </tr>
          </thead>
          <tbody>
            <% productos.forEach((element)=>{ %>
            <tr>
              <td><%= element.idproducto %></td>
              <td><%= element.nombre %></td>
              <td><%= element.categoria %></td>
              <td>$<%= element.precio_compra %>.00</td>
              <td>$<%= element.precio_venta %>.00</td>
              <td><%= element.cantidad %></td>
              <td><%= element.stock %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

    <%- include('templates/footer'); -%>
    <%- include('templates/linksFooter'); -%>
</body>
</html>